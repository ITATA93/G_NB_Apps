# Configuración de [NOMBRE_APP]
# Copiar este archivo a .env y configurar con valores reales

# =============================================================================
# NocoBase API
# =============================================================================
NOCOBASE_API_URL=https://nocobase.hospitaldeovalle.cl/api
NOCOBASE_API_TOKEN=tu_token_aqui

# Rol (opcional)
NOCOBASE_ROLE=""

# =============================================================================
# Base de Datos Local (si aplica)
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=app_database
DB_USER=app_user
DB_PASSWORD=tu_password_aqui

# =============================================================================
# Configuración de Scripts
# =============================================================================
# Modo de ejecución: development, staging, production
NODE_ENV=development

# Log level: debug, info, warning, error
LOG_LEVEL=info

# =============================================================================
# Integraciones (si aplica)
# =============================================================================
# ALMA/SIDRA
SIDRA_HOST=sidra.hospitaldeovalle.cl
SIDRA_PORT=1433
SIDRA_DATABASE=SIDRA
SIDRA_USERNAME=readonly_user
SIDRA_PASSWORD=tu_password_aqui

# =============================================================================
# Seguridad
# =============================================================================
# Verificar certificados SSL
VERIFY_SSL=true

# Timeout para peticiones (segundos)
REQUEST_TIMEOUT=30

# =============================================================================
# Features (activar/desactivar funcionalidades)
# =============================================================================
ENABLE_FEATURE_X=true
ENABLE_FEATURE_Y=false
